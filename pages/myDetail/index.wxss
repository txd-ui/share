/* pages/myPage_pk/index.wxss */

page {
  background: #f6f6f6;
}

.big_background {
  width: 100%;
  height: 100%;
  position: absolute;
}

.big_background image {
  width: 100%;
  height: 100%;
}

.big_blocks {
  width: 712rpx;

  height: 90vh;
  background: #fff;
  position: absolute;
  top: 68rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 20rpx;
}

.big_blocks_top {
  width: 100%;
  height: 216rpx;
  position: relative;
  border-bottom: 1px solid RGB(214, 214, 214);
}

.big_blocks_top_center {
  width: 672rpx;
  height: 181rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
}

.big_blocks_top_center_fu {
  width: 672rpx;
  height: 181rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  display: flex;
  align-items: center;
}

.big_blocks_top_center_fu_left {
  flex: 1;
  height: 121rpx;
  border-right: 1px solid RGB(213, 213, 213);
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.big_blocks_top_center_fu_left_top {
  font-family: '苹方粗体';
  font-size: 36rpx;
  color: RGB(0, 111, 185);
  font-weight: bold;
  flex: 1;
}

.big_blocks_top_center_fu_left_bottom {
  font-size: 30rpx;
  font-family: '苹方常规';
  color: RGB(150, 150, 151);
  flex: 1;
}

.big_blocks_top_center_fu_right {
  flex: 1;
  height: 121rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.big_blocks_top_center_fu_right_top {
  font-size: 36rpx;
  color: RGB(0, 111, 185);
  font-weight: bold;
  font-family: '苹方粗体';
  flex: 1;
}

.big_blocks_top_center_fu_right_bottom {
  font-size: 30rpx;
  font-family: '苹方常规';
  color: RGB(150, 150, 151);
  flex: 1;
}

.big_blocks_top_center image {
  width: 100%;
  height: 100%;
}

.big_blocks_top_center_left {
  flex: 1;
}

.big_blocks_top_center_right {
  flex: 1;
}


.bottom_table{
  width: 670rpx;
  height: 70vh;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
overflow: auto;

}
.bottom_table_th{
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid RGB(214,214,214);
  display: flex;
  align-items: center;
}
.bottom_table_th_all{
  flex: 1;
  text-align: center;
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  font-family: '苹方粗体';
}


.bottom_table_td{
  width: 100%;
  height: 80rpx;
  border-bottom: 1px solid RGB(214,214,214);
    display: flex;
  align-items: center;
}
.bottom_table_td_all{
   flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: RGB(92,92,92);
  font-family: '苹方粗体';
  overflow: hidden;
}
