<!-- pages/volunteer/index.wxml -->
<!-- 填写志愿者信息界面 -->
<block>
  <view class="big_img">
    <image src="../../style/img/big_s.png"></image>
    <view class="top_title">
      <image src="../../style/img/buttom_size.png"></image>
    </view>
    <!-- 姓名 -->
    <view class="conter">
      <van-field value="{{ username }}" clearable bind:change="getName" placeholder="请输入昵称" style="max-width:0px;min-width:0px" />
      <!-- 性别 -->
      <view class="sex">

        <van-radio-group name="gender" bind:change="getGender" value="{{ gender }}" bind:change="genderChange" style="display:flex;flex-flow:row nowarp;justify-content:flex-start;">
          <van-radio name="男" shape="square" checked-color="#25B077">男</van-radio>
          <van-radio name="女" shape="square" checked-color="#25B077" style="margin-right:40rpx;">女</van-radio>

        </van-radio-group>

      </view>

      <!-- 街道 -->
      <van-field readonly clickable name="picker" value="{{ganmeVal}}" right-icon="arrow-down" bindtap="showPopup" placeholder="选择街道" />
      <van-popup show="{{show}}" position="bottom">
        <van-picker show-toolbar columns="{{ columns }}" bind:cancel="onClose" bind:confirm="onConfirm" />
      </van-popup>

      <!-- 社区 -->
      <van-field readonly class="right_sel" clickable name="picker" value="{{communityVal}}" right-icon="arrow-down" bindtap="showcommunity" placeholder="社区" />
      <van-popup show="{{communityShow}}" position="bottom">
        <van-picker show-toolbar columns="{{ communityColumns }}" bind:cancel="communityClose" bind:confirm="communityConfirm" />
      </van-popup>
      <!-- 小区 -->
      <van-field readonly class="txd" clickable name="picker" value="{{residentialVal}}" bindtap="residential" right-icon="arrow-down" placeholder="小区" />
      <van-popup show="{{residentialShow}}" position="bottom">
        <van-picker show-toolbar columns="{{ residentialColumns }}" bind:cancel="residentialClose" bind:confirm="residentialConfirm" />
      </van-popup>
      <!-- 手机号 -->
      <van-field value="{{ phone }}" clearable bind:change="getPhone" type="number" placeholder="请输入电话" border="{{ false }}" />
      <van-button color="#fd0100" bind:click="submit">提交</van-button>
      <van-dialog id="van-dialog" />
    </view>

  </view>


</block>