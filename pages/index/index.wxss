
page{
  padding: 0 16rpx 0 16rpx;
  box-sizing: border-box;
  background: #f6f6f6;
  padding-bottom: 200rpx;
}

.top_title{
 font-size: 30rpx;
 font-family: '苹方粗体';
 color: '#333333';
 margin-top: 24rpx;
 font-weight: bold;
}
.progress{
  width: 20%;
  font-size: 26rpx;
  color: #cacaca;
  margin-top: 17rpx;
  float: left;
  width: 20%;
}
.button_border{
  width: 100%;
  height: 120rpx;
  border-bottom: 1px solid #c5c5c5;

}
.van-progress{
  background:#fff !important;
  width: 70%;
  float: left;
  margin-top: 24rpx;
  margin-left: 30rpx;
}
.conter_block{
  width: 100%;
  height: 400rpx;
  margin-bottom: 20rpx;
  border-radius: 20rpx;
  background: #fff;
  margin-top: 30rpx;
  position: relative;
}
.conter_block_img{
  width: 100%;
  height: 236rpx;

}
.conter_block_size{
  color: #333333;
  margin-top: 32rpx;
  font-size: 30rpx;
  font-family: '苹方粗体';
  font-weight: bold;
  width: 512rpx;
  margin-left: 20rpx;
  float: left;

}
.conter_block_time{
  font-size: 28rpx;
  font-family: '微软雅黑';
  color: #d6d6d6;
  margin-bottom: -24rpx;
  margin-left: 20rpx;
  position: absolute;
  bottom: 36rpx;
}
.van-progress__pivot{
  right: 40% !important;
  background-color: var(--progress-pivot-background-color,none) !important;
  color: var(--progress-pivot-text-color,#333)!important;
}