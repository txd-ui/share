/* pages/message/index.wxss */
page{
  width: 100%;
  height: 100%;
  position: relative;
}
.bottom_block image{
width: 100%;
height: 100%;
position: fixed;
z-index: -1;
}
.big_block{
  width: 95%;
  height: 95%;
  background: #f5f5f5;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%,-50%);
  border-radius: 10rpx;
}
.top_block{
  width: 100%;
  height: 80rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  line-height: 80rpx;
  font-size: 32rpx;
  background: #f5f5f5;
  border-radius: 10rpx;
  font-family: '苹方常规';
}
.text_block{
  width: 100%;
  height: 32vh;
  background: #fff;
  position: relative;
}
.text_content{
  width: 100%;
   height: 23vh;

}
.text_contents{
  width: 100%;
}
.van-field__body--textarea,.van-field__input{
  height: 280rpx !important;
}
.van-field__word-limit{
margin-top: var(--padding-base,50rpx) !important;
box-sizing: border-box !important;
}
.img_block{
  width: 100rpx;
  height: 100rpx;
  border: 1px dashed #ccc;
  position: absolute;
  bottom: 0;
  margin-left: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.img_block image{
  width: 50rpx;
  height: 50rpx;
}
.upSize{
  font-size: 20rpx;
  color: #dddddd;
}
.button_block{
  width: 90%;
  height: 80rpx;
  background: #0752f7;
  margin: 90rpx auto;
  border-radius: 10rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 32rpx;
  font-family: '苹方常规';
}
